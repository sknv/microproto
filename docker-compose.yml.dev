version: '3.5'

services:
  consul:
    image: consul:1.2.2
    command: agent -dev -ui -client=0.0.0.0 -log-level=info
    network_mode: host
    restart: unless-stopped

  traefik:
    image: traefik:v1.7-alpine
    network_mode: host
    volumes:
      - ./traefik/traefik.toml:/etc/traefik/traefik.toml # set the config file
    restart: unless-stopped
