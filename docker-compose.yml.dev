version: '3.5'

services:
  consul:
    image: consul:1.2.2
    command: agent -dev -ui -client=0.0.0.0 -log-level=info
    network_mode: host
    restart: unless-stopped

  fabio:
    image: fabiolb/fabio:1.5.9-go1.10.2
    network_mode: host
    volumes:
      - ./fabio/fabio.properties:/etc/fabio/fabio.properties
    restart: unless-stopped
